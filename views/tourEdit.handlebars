<div class="container mt-5 mb-5 row">
	<div class="col-6 text-justify">
		<form action="/users/:tour_id/tourEdit" method="POST" class="col-6">
			<div class="form-group ">
				<label for="exampleFormControlInput1">Title</label>
				<input type="email" class="form-control" id="exampleFormControlInput1" placeholder="偷閒度假去~">
			</div>
			<div class="form-group">
				<label for="exampleFormControlSelect1">選擇日期: </label>
				<input type="date" class="form-control" id="exampleFormControlSelect1"></input>
			</div>
			<div class="form-group">
				<label for="exampleFormControlSelect2">天數: </label>
				<select multiple class="form-control" id="exampleFormControlSelect2">
					<option>1</option>
					{{!-- <option>2</option>
					<option>3</option>
					<option>4</option>
					<option>5</option> --}}
				</select>
			</div>
			{{!-- <div class="form-group">
				<label for="exampleFormControlTextarea1">旅遊敘述:</label>
				<textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
			</div>--}}
			<input type="hidden" name="tour_Id" value="{{tour.id}}" />
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
	<div id="drag-drop-basic col-6">
		{{!--被拖曳的container--}}
		<div id="source-container" data-role="drag-drop-container">
			{{!--被拖曳的item--}}
			{{!-- {{#each components}} --}}
			<div class="container row" id="drag-source" draggable="true">
				<div class="">
					<div class="card mb-4 shadow-sm">
						<img class="card-img-top" src="https://picsum.photos/200" alt="Card image cap" width="200px" height="180px">
						<div class="card-body">
							<p class="card-text">
								<a href="/restaurants/{{this.id}}">
									{{this.name}}
								</a>
							</p>
							<p class="card-text">{{this.description}}</p>
						</div>
					</div>
				</div>
		</div>
		{{!-- {{/each}} --}}
		{{!--目的地container--}}
		<div id="target-container" data-role="drag-drop-container">
			{{!--目的地component--}}
			{{!-- {{#each components}} --}}
			<div class="container row ">
				<div class="">
					<div class="card mb-4 shadow-sm ">
						<img class="card-img-top" src="https://picsum.photos/200" alt="Card image cap" width="200px" height="180px">
						<div class="card-body">
							<p class="card-text">
								<a href="/restaurants/{{this.id}}">
									{{this.name}}
								</a>
							</p>
							<p class="card-text">{{this.description}}</p>
						</div>
					</div>
				</div>
			</div>
			{{!-- {{/each}} --}}
		</div>
	</div>
</div>
