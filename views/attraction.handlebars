<div class="container row p-5 m-auto">
	<div class="col-md-6 ">
		<div class="swiper-container">
			<div class="swiper-wrapper">
				{{#each attraction.Photos}}
				<div class="swiper-slide text-center">
					<img class="img-responsive center-block rounded" src="{{this.image}}" style="width: 400px">
				</div>
				{{/each}}
			</div>
			<!--如果需要分页器 -->
			<div class="swiper-pagination"></div>
			<!-- 如果需要导航按钮 -->
			{{!-- <div class="swiper-button-prev " ></div>
			<div class="swiper-button-next"></div> --}} --}}

			<!-- 如果需要滚动条 -->
			{{!-- <div class="swiper-scrollbar"></div>  --}}
		</div>
	</div>
	<div class="col-md-5 ">
		<div class="well">
			<label><i class="fas fa-camera-retro" style="font-size: 36px;color:tomato;"></i></label>
			<h5 style="color: saddlebrown;">{{attraction.name}} </h5>

			<ul class="list-unstyled">
				{{#ifCond attraction.opening_up ""}}
				<p style="font-size: 16px;color:tomato;">{{attraction.opening_hours}}<span class="fas fa-eye ml-4"style="color:darkolivegreen;font-size: 15px;">{{attraction.viewCounts}}</span><span class="fas fa-heart ml-4"style="color:darkorange;font-size: 15px; margin-right:4px;">{{attraction.LikedUsers.length}}</span></p>
				{{else}}
				<p style="font-size: 16px;color:tomato;">{{status}}<span class="fas fa-eye ml-4"
						style="color:darkolivegreen;font-size: 15px; ">{{attraction.viewCounts}}</span><span class="fas fa-heart ml-4"
						style="color:darkorange;font-size: 15px; margin-right:4px;">{{attraction.LikedUsers.length}}</span></p>
				{{/ifCond}}
				<li><strong>Opening Hour:</strong> {{attraction.opening_hours}}</li>
				<li><strong>Tel:</strong> {{attraction.phone}} </li>
				<li><strong>Address:</strong> {{attraction.address}} </li>
			</ul>
		</div>
		<div class="row float-left">
			{{#if isFavorited }}
			<form action="/attractions/{{attraction.id}}/favorite?_method=DELETE" method="POST" style="display: contents;">
				<button type="submit" class="btn btn-outline-info btn-sm">移除收藏</button></form>
			{{else}}
			<form action="/attractions/{{attraction.id}}/favorite" method="POST" style="display: contents;"><button
					type="submit" class="btn btn-info btn-sm ">加入收藏</button></form>
			{{/if}}

			{{#if isSelected }}
			<form action="/users/{{attraction.id}}/attraction/component?_method=DELETE" method="POST"
				style="display: contents;"><button type="submit" class="btn btn-outline-success btn-sm ml-2">移除規劃</button>
			</form>
			{{else}}
			<form action="/attraction/{{attraction.id}}/component" method="POST" style="display: contents;"><button
					type="submit" class="btn btn-success btn-sm ml-2">加入規劃</button></form>
			{{/if}}
		</div>
	</div>
	<div class="container mt-2">
		<p style="font-size: 14px; color:dimgray">{{attraction.introduction}} </p>
	</div>
	<hr>
	<br />
	<br />

	<div class="container p-2">
		<h7>所有評論：</h7>
		{{#each attraction.Comments}}
		<blockquote class="blockquote row m-auto text-center">
			<div class="col-md-1"></div>
			<a href="/users/{{this.User.id}}" class="mr-2 mt-1"><img class="rounded" src="{{this.User.avatar}}" width="50px;"
					height="50px"></a>
			<div class="col-md-6 comment_bg">
				<p class="mb-0" style="font-size: 16px;color:black">{{this.comment}}
					<span class="blockquote-footer" style="color:slategray">{{moment this.createdAt}}</span>
			</div>
			</p>
			{{#if ../isAdmin }}
			<form action="/comment/{{this.id}}?_method=DELETE" method="POST" class="col-3" style="float: right;">
				<button type="submit" class="btn btn-danger">Delete</button>
			</form>
			{{/if}}
		</blockquote>
		<hr />
		{{/each}}
		<br />
		<br />
		<form action="/attraction/{{attraction.id}}/comment" method="POST">
			<div class="form-group">
				<label for="text">留下評論：</label>
				<textarea class="form-control" style="font-size: 16px;" id="comment" name="comment" rows="3"></textarea>
			</div>
			<div class="text-right">
				<input type="hidden" name="rest_id" value="{{attraction.id}}" />
				<button type="submit" class="btn btn-primary">Submit</button>
				<a href="javascript:history.back()">回上一頁</a>
			</div>
		</form>
	</div>

</div>

