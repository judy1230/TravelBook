<div class="home_bg mt-4">
	<div class="container row m-auto">
		<label>你所搜尋{{keyword}}, 結果如下:</label>
		{{#each components}}
		<div class="col-md-3">
			<div class="card shadow-sm mt-5" style="width: 13rem;">
				<img class="card-img-top image-fluid " src="{{this.image}}" alt="Card image cap" width="200px" height="180px">
				<div class="card-body text-center">
					<a class="card-title font-weight-bold" href="/shops/{{this.id}}">{{this.name}}...</a>
					<p class="m-auto" style="font-size: 14px;color:tomato;">{{this.status}}</p>
					<div class="ratings card-text row">
						<div class="empty_star">★★★★★</div>
						<div class="full_star" style="width: {{this.ratingStars}};">★★★★★</div>
					</div>
					<div class="container row">
						<div class="col-3"></div>
						<div class="col-3 text-right ml-4">
							{{#if this.isFavorited }}
							<form action="/shops/{{this.id}}/favorite?_method=DELETE" method="POST">
								<button type="submit" class="btn close btn-sm"><i class="far fa-heart" style="color:red"></i></button>
							</form>
							{{else}}
							<form action="shops/{{this.id}}/favorite" method="POST"><button type="submit" class="btn close btn-sm "><i
										class="fas fa-heart" style="color:red"></i></button></form>
							{{/if}}
						</div>

						<div class="col-3 text-right">
							{{#if this.isSelected }}
							<form action="/users/{{this.id}}/shop/component?_method=DELETE" method="POST">
								<button type="submit" class="btn close"><i class="far fa-check-circle" style="color:green"></i></button>
							</form>
							{{else}}
							<form action="/users/{{this.id}}/shop/component" method="POST" style="display: contents;"><button
									type="submit" class="btn close btn-sm "><i class="fas fa-calendar-alt"
										style="color:green"></i></button></form>
							{{/if}}
						</div>
						<div class="col-3" style="width:100%;"></div>
					</div>

				</div>
			</div>
		</div>
		{{/each}}
	</div>
	<br />
	<br />
	<nav aria-label="Page navigation example">
		<ul class="pagination">
			<li class="page-item">
				<a class="page-link" href="/shops?page={{prev}}" aria-label="Previous">
					<span aria-hidden="true">&laquo;</span>
				</a>
			</li>
			{{#each totalPage}}
			{{#ifCond this ../page}}
			<li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
			{{else}}
			<li class="page-item"><a class="page-link" href="/shops?page={{this}}">{{this}}</a></li>
			{{/ifCond}}
			{{/each}}
			<a class="page-link" href="/shops?page={{next}}" aria-label="Next">
				<span aria-hidden="true">&raquo;</span>
			</a>
			</li>
		</ul>
	</nav>


</div>
<style>
	.home_bg {
		background-image: url(https://www.crazyppt.com/wp-content/uploads/2018/10/1-1PRG01119.jpg);
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		width: 100%;
		height: 100%;
	}

	.ratings {
		position: relative;
		vertical-align: middle;
		display: inline-block;
		color: #ddd;
		/*背景星星顏色*/
		overflow: hidden;
		font-size: 20px;
		/*調整字體大小可放大縮小星星*/
		text-shadow: 0px 1px 0 #999;
	}

	.full_star {
		/*調整寬度可變更星等*/
		position: absolute;
		left: 0;
		top: 0;
		white-space: nowrap;
		overflow: hidden;
		color: orange
			/*前景星星顏色*/
	}

	.shadow-sm {
		background-color: papayawhip;
	}
</style>
