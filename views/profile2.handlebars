<div class="container row p-5 m-auto">
	<div class="col-md-6 ">
		<div class=" text-center">
			<img class="img-responsive center-block rounded" src="{{profile.avatar}}" style="width: 200px">
		</div>
	</div>
	<div class="col-md-5">
		<div class="">
			<div class="row m-auto " height="300px;">
				<label><i class="fas fa-user-alt mr-3" style="font-size: 24px;color:burlywood;"></i></label>
				<h5 style="color: saddlebrown;">{{profile.name}} </h5>
			</div>
			<ul class="list-unstyled">
				{{#if profile.FavoritedRestaurants}}
				<li><strong class="fas fa-utensils mt-2" style="color:brown; font-size:24px;"></strong>
				收藏的餐廳數: 	{{profile.FavoritedRestaurants.length}}</li>
				{{#each profile.FavoritedRestaurants }}
				<a href="/restaurants/{{this.id}}" class="mr-2 text-info ">{{this.name}}</a>
				{{/each}}
				{{/if}}
				{{#if profile.FavoritedAttractions}}
				<li><strong class="fas fa-camera-retro mt-2" style="color:brown; font-size:24px;"></strong>
				收藏的景點數:	{{profile.FavoritedAttractions.length}}</li>
				{{#each profile.FavoritedAttractions }}
				<a href="/attractions/{{this.id}}" class="mr-2 text-info ">{{this.name}}</a>
				{{/each}}
				{{/if}}
				{{#if profile.FavoritedShops}}
				<li><strong class="fas fa-gifts mt-2" style="color:brown; font-size:24px;"></strong>
				收藏的商店數:	{{profile.FavoritedShops.length}}</li>
				{{#each profile.FavoritedShops }}
				<a href="/shops/{{this.id}}" class="mr-2 text-info">{{this.name}}</a>
				{{/each}}
				{{/if}}
			</ul>
		</div>

		<button class="btn btn-outline-dark" href="/user/{{profile.id}}/edit">Edit</button>
		<button class="btn btn-outline-secondary" href="javascript:history.back()">回上一頁</button>
	</div>
	<div class="container p-5 text-center" style=" ">

		{{#each profile.Tours}}
		<blockquote class="container row  text-justify">
			<div class="col-3  text-center text-justify">
				<a class="" style="font-size: 24px;"
					href="/users/{{../profile.id}}/tour/{{this.id}}" title="行程瀏覽"><span class="fas fa-clipboard-check"></span>{{this.title}}
				</a>
			</div>
			<div class="col-5">
				<p class="text-monospace" >{{moment this.updatedAt}}</span>
			</div>

			<div class="col-4">
				<a action="/users/{{user.id}}/tour/{{id}}/edit" class="btn close btn-sm "><i class="fas fa-edit mr-1" style="color:brown" title="編輯"></i></a>
				<a href="/users/{{user.id}}/tour/{{id}}/share" class="btn close btn-sm "><i class="far fa-share-square mr-1"	style="color:brown" title="分享"></i></a>
				<form action="/users/{{user.id}}/tour/{{id}}?_method=DELETE" method="POST" class="mt-1">
					<button type="submit" class="btn close btn-sm "><i class="far fa-trash-alt" style="color:crimson"	title="刪除"></i></button>
				</form>
			</div>
		</blockquote>
		{{/each}}
	</div>

	<hr>
	<br />
	<br />

